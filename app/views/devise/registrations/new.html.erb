<div class="w-full">
  <div class="py-1 text-center bg-blue" style="border-top-left-radius:2rem; border-top-right-radius:2rem">
    <h1 class="text-4xl font-bold text-white">Sign Up</h1>
  </div>
</div>
<div id="entities" class="fixed left-4 top-3">
  <%= link_to image_tag("arrow.png", class:"max-h-6"), root_path %>
</div>
<div  class="bg-white mt-14">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "name", class: "w-full border-x-0 border-y-1" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "w-full border-x-0 border-y-1" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "password (6 characters min)", class: "w-full border-x-0 border-y-1" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password", class: "w-full border-x-0 border-y-1 mb-2" %>
    </div>

    <div class="flex flex-row items-center justify-center w-full py-2 text-center bg-blue">
      <%= f.submit "Sign Up", class: "w-full bg-blue-600 text-white block font-medium" %>
    </div>
  <% end %>
</div>

